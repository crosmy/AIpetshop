.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  /* padding: 20px; */
  border: 4px solid #ffaaff;
  margin: 20px;
}
.image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.info {
  display: flex;
  flex-direction: column;
  margin-top: 16px;
}
.name {
  font-size:25px;
  font-weight: bold;
}
.age {
  margin-top: 8px;
  font-size: 20px;
  color: #666666;
}
.price {
  margin-top: 8px;
  font-size: 18px;
  color: #999999;
}
.type,
.breed,
.description,
.health,
.vaccination {
  margin-top: 8px;
  font-size: 19px;
  color: #666666;
}

